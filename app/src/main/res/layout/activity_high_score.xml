<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HighScoreActivity">

    <!-- title -->

    <TextView
        android:id="@+id/highscoreTitle"
        android:layout_width="315dp"
        android:layout_height="41dp"
        android:layout_marginTop="52dp"
        android:fontFamily="monospace"
        android:text="@string/highscore_title"
        android:textAlignment="center"
        android:textColor="@color/pink_500"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/highscoreTitleEasy"
        android:layout_width="315dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:text="@string/highscore_easy"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/highscoreTitle" />

    <TextView
        android:id="@+id/highscoreTitleHard"
        android:layout_width="315dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        android:fontFamily="monospace"
        android:text="@string/highscore_hard"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/highscoreTimesEasy" />

    <TextView
        android:id="@+id/highscoreTimesEasy"
        android:layout_width="318dp"
        android:layout_height="178dp"
        android:layout_marginTop="12dp"
        android:fontFamily="monospace"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/highscoreTitleEasy" />

    <TextView
        android:id="@+id/highscoreTimesHard"
        android:layout_width="325dp"
        android:layout_height="180dp"
        android:fontFamily="monospace"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/highscoreTitleHard"
        app:layout_constraintVertical_bias="0.109" />


</androidx.constraintlayout.widget.ConstraintLayout>